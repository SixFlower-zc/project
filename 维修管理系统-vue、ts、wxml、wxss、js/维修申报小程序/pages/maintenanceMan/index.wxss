/* pages/maintenanceMan/index.wxss */
.view-box {
  height: 100vh;
  background-color: #f0f3f6;
  display: flex;
  flex-direction: column;
}

.header {
  background-color: #ffe6fb;
  color: #000;
  padding: 15px;
  text-align: center;
  font-size: 18px;
}

.repair-list {
  flex: 1;
  padding: 10px;
  background-color: #fff;
  overflow-y: auto;
}

.repair-worker {
  padding: 15px;
  margin: 10px 0;
  border: 1px solid #eee;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.worker-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
}

.worker-name {
  font-size: 16px;
  font-weight: bold;
}

.worker-level {
  color: #666;
}

.worker-skills,
.worker-certificates {
  margin: 5px 0;
}

.skill-item,
.certificate-item {
  display: inline-block;
  background-color: #e7f3fe;
  border-radius: 4px;
  padding: 5px 10px;
  margin-right: 5px;
  font-size: 14px;
}
