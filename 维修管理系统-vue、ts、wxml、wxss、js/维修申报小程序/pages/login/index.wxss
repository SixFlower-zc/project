/* pages/login/index.wxss */
.view-box {
  height: 100vh;
  background: linear-gradient(60deg, #6670ff, #ff64c4 40%, #66edff);
  box-sizing: border-box;
  padding: 100rpx 0;
}

.view-box > .box {
  height: 1100rpx;
  /* background-color: #000; */
  display: flex;
  flex-direction: column;
}

.view-box > .box > .title {
  color: #fff;
  font-size: 100rpx;
  text-align: center;
  padding: 300rpx 0 100rpx;
}

.view-box > .box > label {
  color: #fff;
  box-sizing: border-box;
  height: 100rpx;
  padding: 30rpx 155rpx;
  display: flex;
}

.view-box > .box > label > text {
  width: 100rpx;
  font-size: 30rpx;
}

.view-box > .box > label > input {
  border-bottom: 1rpx solid #fff;
}

.view-box > .box > button {
  color: #fff;
  margin-top: 50rpx;
  background-color: #0000;
  border: 1px solid pink;
  border-radius: 50rpx;
}

.view-box > .box > button:active {
  color: pink;
  background-color: rgba(255, 213, 220, 0.096);
}
