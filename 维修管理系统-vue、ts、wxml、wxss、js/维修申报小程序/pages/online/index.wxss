/* pages/online/index.wxss */
.view-box {
  height: 100vh;
  background-color: #f0f3f6;
  display: flex;
  flex-direction: column;
}

.header {
  background-color: #ffe6fb;
  color: #000;
  padding: 15px;
  text-align: center;
}

.chat-box {
  flex: 1;
  padding: 10px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  height: 400px; /* 设置最大高度 */
  overflow-y: hidden; /* 隐藏滚动条 */
}

.message {
  margin: 10px 0;
  padding: 10px;
  border-radius: 6px;
}

.message.user {
  background-color: #007aff;
  color: white;
  align-self: flex-end;
}

.message.bot {
  background-color: #f1f1f1;
  color: black;
  align-self: flex-start;
}

.input-container {
  display: flex;
  padding: 10px;
}

.input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.send-button {
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
}
