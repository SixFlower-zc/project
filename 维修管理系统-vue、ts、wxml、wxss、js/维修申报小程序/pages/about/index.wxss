/* pages/about/index.wxss */
.container {
  height: 100vh; /* 确保容器铺满整个视口高度 */
  padding: 20rpx;
  background-color: #ffe6fb;
  display: flex;
  flex-direction: column;
  justify-content: center; /* 垂直居中对齐 */
  align-items: center; /* 水平居中对齐 */
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6347;
  margin-bottom: 20rpx;
}

.content {
  font-size: 28rpx;
  color: #545454;
  margin-bottom: 30rpx;
  text-align: center; /* 确保内容文本居中 */
}

.quirky-facts {
  font-size: 24rpx;
  color: #4682b4;
  margin-top: 30rpx;
  text-align: center; /* 确保趣味事实文本居中 */
}

button {
  background-color: #ff4500;
  color: white;
  padding: 10rpx 20rpx;
  border: none;
  border-radius: 5px;
  font-size: 28rpx;
  margin-top: 20rpx; /* 按钮上方留些间距 */
}
