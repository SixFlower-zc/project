/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.error {
  width: 400rpx;
  margin: 550rpx auto 0;
  background-color: rgba(255, 92, 92, 0.623) !important;
  color: rgb(255, 255, 255);
}

.success {
  width: 400rpx;
  margin: 550rpx auto 0;
  background-color: rgb(111, 255, 92) !important;
  color: rgb(255, 255, 255);
}
